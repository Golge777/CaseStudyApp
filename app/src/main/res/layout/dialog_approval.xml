<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutDialogEdit"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:background="@drawable/dialog_border">

    <TextView
        android:id="@+id/textViewDialogEditHeader"
        style="@style/headerSettings"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="ÖDEME ONAYI"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewDialogEdit"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:gravity="center"
        android:foregroundGravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewDialogEditHeader" />

    <Button
        android:id="@+id/buttonEditCancel"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:textColor="@color/materialWhite"
        android:text="İPTAL"
        android:onClick="CancelEditDialog"
        app:layout_constraintTop_toBottomOf="@id/textViewDialogEditHeader"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="74dp"
        android:theme="@style/WelcomeButtons"/>

    <Button
        android:id="@+id/buttonEditOK"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:textColor="@color/materialWhite"
        android:text="ONAYLA"
        app:layout_constraintTop_toBottomOf="@id/textViewDialogEditHeader"
        app:layout_constraintStart_toEndOf="@id/buttonEditCancel"
        android:layout_marginStart="16dp"
        android:layout_marginTop="74dp"
        android:theme="@style/WelcomeButtons"/>



</androidx.constraintlayout.widget.ConstraintLayout>